<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="10sp"
    android:id="@+id/constraint_model">

    <TextView
        android:id="@+id/txt_msj"
        style="@style/button.style.msj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dash_state"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_hora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/txt_msj"
        app:layout_constraintTop_toBottomOf="@id/txt_msj" />
</android.support.constraint.ConstraintLayout>